<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Simple Paint" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="Файл">
                <MenuItem Header="Сохранить" Click="SaveMenuItem_Click"/>
                <MenuItem Header="Очистить" Click="ClearMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="0" Margin="0,30,0,0">
            <Button Content="Карандаш" Click="PencilButton_Click" Width="80"/>
            <Button Content="Линия" Click="LineButton_Click" Width="80"/>
            <Button Content="Квадрат" Click="RectangleButton_Click" Width="80"/>
            <Button Content="Эллипс" Click="EllipseButton_Click" Width="80"/>
            <Button x:Name="ColorButton" Content="Цвет" Click="ColorButton_Click" Width="80" Background="Black" Foreground="White"/>
            <Button Content="Очистить" Click="ClearButton_Click" Width="80"/>
        </ToolBar>

        <Canvas x:Name="DrawingCanvas" Grid.Row="1" Background="White" 
                MouseDown="DrawingCanvas_MouseDown"
                MouseMove="DrawingCanvas_MouseMove"
                MouseUp="DrawingCanvas_MouseUp"/>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к рисованию"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>